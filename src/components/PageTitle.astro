---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<h1 class="font-[Dela+Gothic+One] text-4xl md:text-5xl text-[#FF1493] text-center mb-8 animate-float relative">
  {title}
  <span class="absolute top-0 right-0 text-[#FFD700] opacity-70 sparkle">âœ§</span>
</h1>

<style>
  .animate-float {
    animation: float 2s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .sparkle {
    animation: sparkle 1.5s infinite;
  }

  @keyframes sparkle {
    0%, 100% { opacity: 0; }
    50% { opacity: 1; }
  }
</style>
