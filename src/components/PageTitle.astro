---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="text-center mb-12 nostalgic-title-container">
  <h1 class="text-4xl md:text-5xl relative nostalgic-title">
    <slot>
      <span class="kawaii-content">{title} ✧</span>
      <span class="retro-content">◆ {title} ◆</span>
    </slot>
  </h1>
</div>

<style>
  :global(.nostalgic-mode) .nostalgic-title-container,
  :global(.nostalgic-mode) .nostalgic-title,
  :global(.nostalgic-mode) .kawaii-content,
  :global(.nostalgic-mode) .retro-content {
  }

  body:not(.nostalgic-mode) .nostalgic-title-container {
    position: relative;
    padding: 2rem 0;
  }

  body:not(.nostalgic-mode) .nostalgic-title {
    font-family: 'Quicksand', sans-serif;
    font-weight: 700;
    background: linear-gradient(
      135deg,
      #FF69B4 0%,
      #DA70D6 50%,
      #9370DB 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
  }

  /* Efeito de decoração */
  body:not(.nostalgic-mode) .nostalgic-title::before,
  body:not(.nostalgic-mode) .nostalgic-title::after {
    content: '';
    position: absolute;
    width: 60px;
    height: 2px;
    background: linear-gradient(
      90deg,
      rgba(255, 105, 180, 0) 0%,
      rgba(255, 105, 180, 0.5) 50%,
      rgba(255, 105, 180, 0) 100%
    );
    top: 50%;
    transform: translateY(-50%);
  }

  body:not(.nostalgic-mode) .nostalgic-title::before {
    left: -80px;
  }

  body:not(.nostalgic-mode) .nostalgic-title::after {
    right: -80px;
  }

  /* Animação suave ao hover */
  @keyframes gentleFloat {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-5px) scale(1.02);
    }
  }

  body:not(.nostalgic-mode) .nostalgic-title:hover {
    animation: gentleFloat 2s ease-in-out infinite;
  }

  /* Efeito de brilho */
  body:not(.nostalgic-mode) .nostalgic-title::before {
    content: '';
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(255, 182, 193, 0.15),
      transparent 70%
    );
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  body:not(.nostalgic-mode) .nostalgic-title:hover::before {
    opacity: 1;
  }

  /* Controle de visibilidade */
  .kawaii-content {
    display: block;
  }

  .retro-content {
    display: none;
  }

  /* Media queries para responsividade */
  @media (max-width: 768px) {
    body:not(.nostalgic-mode) .nostalgic-title::before,
    body:not(.nostalgic-mode) .nostalgic-title::after {
      width: 40px;
    }

    body:not(.nostalgic-mode) .nostalgic-title::before {
      left: -50px;
    }

    body:not(.nostalgic-mode) .nostalgic-title::after {
      right: -50px;
    }
  }
</style>
