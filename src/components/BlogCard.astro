---
interface Props {
  title: string;
  date: string;
  preview: string;
  image: string;
  slug: string;
  tags?: string[];
}

const { title, date, preview, image, slug, tags = [] } = Astro.props;

// Mapa de cores para as tags
const tagColorMap = {
  // Emo√ß√µes B√°sicas
  "feliz": "#FFD700",
  "triste": "#87CEEB",
  "estressante": "#FF69B4",
  "animado": "#FFA500",
  "ansioso": "#9370DB",
  "tranquilo": "#98FB98",
  "frustrado": "#FF4500",
  "orgulhoso": "#DDA0DD",

  // Emo√ß√µes Adicionais
  "pensativo": "#B0C4DE",    // Azul suave
  "solit√°rio": "#E6E6FA",    // Lavanda claro
  "sonolento": "#DEB887",    // Marrom suave
  "nost√°lgico": "#FFE4B5",   // P√™ssego
  "apaixonado": "#FFB6C1",   // Rosa claro
  "determinado": "#98FB98",  // Verde pastel
  "sonhador": "#E0FFFF",     // Ciano claro
  "t√≠mido": "#FFC0CB",       // Rosa beb√™

  // Tags Kawaii/Fofas
  "kawaii": "#FFC0CB",       // Rosa suave
  "mochi": "#FFE4E1",        // Rosa misty
  "pastel": "#F0FFF0",       // Verde honeydew
  "chibi": "#FFE4B5",        // Moccasin
  "fluffy": "#F0F8FF",       // Azul alice
  "sparkly": "#FFE4E1",      // Rosa misty
  "melody": "#E6E6FA",       // Lavanda
  "dreamy": "#F8F8FF",       // Branco fantasma

  // Tags T√©cnicas
  "desenvolvimento": "#8A4FFF",
  "feature": "#32CD32",
  "bug": "#FF6347",
  "design": "#FF1493",
  "performance": "#4169E1",
  "refactor": "#20B2AA",
  "teste": "#BA55D3",
  "deploy": "#32CD32"
};
---

<a href={`/blog/${slug}`} class="block group">
  <article class="bg-white/90 backdrop-blur-sm p-6 rounded-2xl border-4 border-[#FFC0CB]
     hover:scale-[1.02] hover:shadow-xl transition-all duration-300
     hover:border-[#FF69B4]">
    <div class="flex items-start gap-6">
      <div class="w-32 h-32 flex-shrink-0 rounded-xl overflow-hidden
         border-2 border-[#FFB6C1] shadow-sm
         group-hover:shadow-md transition-shadow">
        <img
          src={image}
          alt={title}
          loading="lazy"
          class="w-full h-full object-cover object-center
             transform group-hover:scale-110 transition-transform duration-500"
        />
      </div>

      <div class="flex-1 space-y-3">
        <div class="relative">
          <h2 class="font-[Dela+Gothic+One] text-2xl text-[#FF1493]
             group-hover:text-[#FF69B4] transition-colors">
            {title}
            <span class="absolute -top-1 -right-2 text-[#FFD700] opacity-0
               group-hover:opacity-100 transition-opacity">üç°</span>
          </h2>
        </div>

        <p class="font-[Mochiy+Pop+One] text-sm text-[#8A4FFF] flex items-center gap-2">
          <span class="text-xs">üå∏</span> {date}
        </p>

        {tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map(tag => {

              const getBrightness = (hexColor) => {
                const rgb = parseInt(hexColor.slice(1), 16);
                const r = (rgb >> 16) & 0xff;
                const g = (rgb >> 8) & 0xff;
                const b = (rgb & 0xff);
                return (r * 299 + g * 587 + b * 114) / 1000;
              };

              const bgColor = tagColorMap[tag] || '#FFD1DC';
              
              const textColor = getBrightness(bgColor) > 155 ? '#333333' : '#FFFFFF';

              return (
                <span
                  class="px-3 py-1 rounded-full text-xs font-[Mochiy+Pop+One]
                  border-2 border-[#FFD1DC] shadow-sm transform hover:scale-105
                  transition-all duration-200"
                  style={`background-color: ${bgColor}; color: ${textColor}`}
                >
                  ‚úß {tag}
                </span>
              );
            })}
          </div>
        )}

        <p class="font-[Mochiy+Pop+One] text-[#333] leading-relaxed">{preview}</p>

        <div class="pt-2">
          <span class="inline-flex items-center px-4 py-2
             bg-[#FFD1DC] text-[#FF1493] font-[Mochiy+Pop+One] rounded-lg
             group-hover:bg-[#FFC0CB] transition-colors
             shadow-sm hover:shadow-md">
            Leia mais
            <span class="ml-1 group-hover:ml-2 transition-all duration-300">‚ô°</span>
          </span>
        </div>
      </div>
    </div>
  </article>
</a>

<style>
  article {
    position: relative;
    overflow: hidden;
  }

  article::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,192,203,0.2) 0%, transparent 60%);
    opacity: 0;
    transition: opacity 0.3s;
    pointer-events: none;
  }

  article:hover::after {
    opacity: 1;
  }
</style>
