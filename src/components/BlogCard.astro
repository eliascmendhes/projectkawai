---
interface Props {
  title: string;
  date: string;
  preview: string;
  image: string;
  slug: string;
  tags?: string[];
}

const { title, date, preview, image, slug, tags = [] } = Astro.props;

const tagColorMap = {
  // Tags de Desenvolvimento
  "desenvolvimento": "#0000A0",
  "feature": "#008000",
  "bug": "#A00000",
  "design": "#800080",
  "performance": "#000080",
  "refactor": "#008080",
  "teste": "#483D8B",
  "deploy": "#006400",

  // Tags de Estudos
  "estudos": "#1E347B",
  "produtivo": "#006000",
  "foco": "#4B0082",
  "revisão": "#00008B",
  "anotações": "#8B4500",
  "biblioteca": "#804000",
  "deadline": "#8B0000",
  "leitura": "#005000",
  "organização": "#404080",

  // Tags de Música
  "rock": "#000060",
  "indie-rock": "#400040",
  "country": "#804000",
  "folk": "#654321",
  "metal": "#202020",
  "jazz": "#000080",
  "blues": "#00004B",
  "pop": "#600060",
  "eletrônica": "#400080",
  "clássica": "#483000",

  // Tags de Emoções
  "feliz": "#B8860B",
  "triste": "#505050",
  "ansioso": "#600060",
  "estressado": "#800000",
  "depressivo": "#2F4F4F",
  "nervoso": "#800000",
  "calmo": "#006040",
  "animado": "#806000",
  "frustrado": "#804020",
  "inspirado": "#006080",
  "nostálgico": "#483D8B",
  "esperançoso": "#006000",
};
---

<a href={`/blog/${slug}`} class="block">
  <article class="xp-card">
    <div class="flex items-start gap-6">
      <div class="xp-image-container">
        <img
          src={image}
          alt={title}
          loading="lazy"
          class="xp-image"
        />
      </div>

      <div class="flex-1 space-y-3">
        <h2 class="xp-title">{title}</h2>

        <p class="xp-date">{date}</p>

        {tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map(tag => (
              <span class="xp-tag" style={`background-color: ${tagColorMap[tag] || '#003366'}`}>
                {tag}
              </span>
            ))}
          </div>
        )}

        <p class="xp-preview">{preview}</p>

        <div class="pt-2">
          <button class="xp-button">
            Leia mais
          </button>
        </div>
      </div>
    </div>
  </article>
</a>

<style>
  /* Card Principal */
  .xp-card {
    background: #ECE9D8;
    border: 2px solid;
    border-color: #FFFFFF #808080 #808080 #FFFFFF;
    box-shadow: inset 1px 1px #FFFFFF, inset -1px -1px #404040;
    padding: 15px;
    margin-bottom: 15px;
    transition: none;
  }

  .xp-card:hover {
    background: #F5F5F5;
  }

  .xp-card:active {
    border-color: #808080 #FFFFFF #FFFFFF #808080;
    box-shadow: inset 1px 1px #404040, inset -1px -1px #FFFFFF;
  }

  /* Container da Imagem */
  .xp-image-container {
    width: 120px;
    height: 120px;
    border: 2px solid;
    border-color: #808080 #FFFFFF #FFFFFF #808080;
    padding: 2px;
    background: #FFFFFF;
  }

  .xp-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Título */
  .xp-title {
    font-family: 'Tahoma', sans-serif;
    color: #003399;
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 8px;
  }

  /* Data */
  .xp-date {
    font-family: 'Tahoma', sans-serif;
    color: #666666;
    font-size: 0.9rem;
  }

  /* Tags */
  .xp-tag {
    color: #FFFFFF;
    font-family: 'Tahoma', sans-serif;
    font-size: 0.8rem;
    padding: 3px 8px;
    border: 1px solid rgba(0,0,0,0.3);
    box-shadow:
      inset 1px 1px rgba(255,255,255,0.3),
      inset -1px -1px rgba(0,0,0,0.2);
    border-radius: 2px;
    text-shadow: 1px 1px rgba(0,0,0,0.2);
    transition: all 0.1s ease;
  }

  .xp-tag:hover {
    filter: brightness(110%);
    box-shadow:
      inset 1px 1px rgba(255,255,255,0.4),
      inset -1px -1px rgba(0,0,0,0.1);
  }

  /* Preview */
  .xp-preview {
    font-family: 'Tahoma', sans-serif;
    color: #000000;
    line-height: 1.5;
    font-size: 0.95rem;
    max-height: 4.5em;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
  }

  /* Botão */
  .xp-button {
    background: linear-gradient(to bottom, #F6F6F6, #DCDBDB);
    border: 2px solid;
    border-color: #FFFFFF #808080 #808080 #FFFFFF;
    box-shadow: inset 1px 1px #FFFFFF, inset -1px -1px #404040;
    color: #000000;
    font-family: 'Tahoma', sans-serif;
    font-size: 0.9rem;
    padding: 4px 12px;
  }

  .xp-button:hover {
    background: linear-gradient(to bottom, #FFF, #E9E9E9);
  }

  .xp-button:active {
    border-color: #808080 #FFFFFF #FFFFFF #808080;
    box-shadow: inset 1px 1px #404040, inset -1px -1px #FFFFFF;
    padding-top: 5px;
    padding-left: 13px;
  }

  /* Responsividade */
  @media (max-width: 768px) {
    .flex {
      flex-direction: column;
      gap: 12px;
    }

    .xp-image-container {
      width: 100%;
      height: 140px;
      margin-bottom: 0;
    }

    .xp-title {
      font-size: 1rem;
      line-height: 1.2;
      margin-bottom: 4px;
    }

    .xp-date {
      font-size: 0.85rem;
    }

    .xp-preview {
      font-size: 0.9rem;
      line-height: 1.4;
      -webkit-line-clamp: 3;
    }

    .xp-tag {
      font-size: 0.75rem;
      padding: 2px 6px;
    }

    .xp-button {
      padding: 3px 10px;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .xp-image-container {
      height: 120px;
    }

    .xp-card {
      padding: 10px;
    }
  }
</style>
