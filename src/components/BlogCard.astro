---
interface Props {
  title: string;
  date: string;
  preview: string;
  image: string;
  slug: string;
}
const { title, date, preview, image, slug } = Astro.props;
---

<a href={`/blog/${slug}`} class="block group">
  <article class="bg-white/90 backdrop-blur-sm p-6 rounded-2xl border-4 border-kawaii-lavender 
    hover:scale-[1.02] hover:shadow-xl transition-all duration-300 
    hover:border-pink-300">
    <div class="flex items-start gap-6">
      {/* Container da imagem com borda e efeitos */}
      <div class="w-32 h-32 flex-shrink-0 rounded-xl overflow-hidden 
        border-2 border-pink-200 shadow-sm 
        group-hover:shadow-md transition-shadow">
        <img
          src={image}
          alt={title}
          loading="lazy"
          class="w-full h-full object-cover object-center 
            transform group-hover:scale-110 transition-transform duration-500"
        />
      </div>

      <div class="flex-1 space-y-3">
        {/* Título com decoração */}
        <div class="relative">
          <h2 class="font-cherry text-2xl text-pink-600 
            group-hover:text-pink-500 transition-colors">
            {title}
            <span class="absolute -top-1 -right-2 text-pink-300 opacity-0 
              group-hover:opacity-100 transition-opacity">♡</span>
          </h2>
        </div>

        {/* Data com ícone */}
        <p class="font-pixel text-sm text-pink-400 flex items-center gap-2">
          <span class="text-xs">♡</span> {date}
        </p>

        {/* Preview com melhor legibilidade */}
        <p class="font-pixel text-gray-600 leading-relaxed">{preview}</p>

        {/* Botão "Leia mais" melhorado */}
        <div class="pt-2">
          <span class="inline-flex items-center px-4 py-2 
            bg-kawaii-pink text-pink-600 font-pixel rounded-lg 
            group-hover:bg-pink-200 transition-colors
            shadow-sm hover:shadow-md">
            Leia mais 
            <span class="ml-1 group-hover:ml-2 transition-all duration-300">♡</span>
          </span>
        </div>
      </div>
    </div>
  </article>
</a>

<style>
  /* Opcional: Adiciona um efeito de brilho suave ao hover */
  article {
    position: relative;
    overflow: hidden;
  }

  article::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 60%);
    opacity: 0;
    transition: opacity 0.3s;
    pointer-events: none;
  }

  article:hover::after {
    opacity: 1;
  }
</style>
