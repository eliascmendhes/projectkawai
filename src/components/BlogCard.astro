---
interface Props {
  title: string;
  date: string;
  preview: string;
  image: string;
  slug: string;
  tags?: string[];
}

const { title, date, preview, image, slug, tags = [] } = Astro.props;

const tagColorMap = {
  // Tags de Desenvolvimento
  "desenvolvimento": "#4CAF50",
  "feature": "#00C853",
  "bug": "#FF1744",
  "design": "#AA00FF",
  "performance": "#2962FF",
  "refactor": "#00BCD4",
  "teste": "#5C6BC0",
  "deploy": "#388E3C",

  // Tags de Estudos e Produtividade
  "estudos": "#1976D2",
  "produtivo": "#43A047",
  "foco": "#5E35B1",
  "revisão": "#0288D1",
  "anotações": "#8D6E63",
  "biblioteca": "#795548",
  "deadline": "#D32F2F",
  "leitura": "#2E7D32",
  "organização": "#512DA8",

  // Tags de Música
  "música": "#7B1FA2",
  "rock": "#303F9F",
  "indie-rock": "#3949AB",
  "country": "#6D4C41",
  "folk": "#5D4037",
  "metal": "#212121",
  "jazz": "#1A237E",

  // Tags de Reflexão e Vida
  "reflexão": "#37474F",
  "vida": "#795548",
  "pensamentos": "#616161",
  "memórias": "#455A64",
  "experiências": "#5D4037",

  // Tags de Estado de Espírito
  "felicidade": "#FFC107",
  "tristeza": "#1976D2",
  "motivação": "#FF9800",
  "inspiração": "#7B1FA2",
  "gratidão": "#009688",

  // Tags de Filmes
  "drama": "#E53935",
  "velho-oeste": "#8D6E63",
  "romance": "#EC407A",
  "terror": "#263238",
  "suspense": "#37474F",
  "ação": "#FF5722",
  "ficção-científica": "#0097A7",
  "aventura": "#F57C00",
  "comédia": "#FFB300",
  "fantasia": "#7B1FA2",

  // Tags de Anime
  "anime": "#C2185B",
  "shounen": "#D32F2F",
  "shoujo": "#EC407A",
  "seinen": "#455A64",
  "mecha": "#455A64",
  "slice-of-life": "#00897B",
  "isekai": "#7B1FA2",
};

---

<a href={`/blog/${slug}`} class="block">
  <article class="xp-card">
    <div class="flex items-start gap-6">
      <div class="xp-image-container">
        <img
          src={image}
          alt={title}
          loading="lazy"
          class="xp-image"
        />
      </div>

      <div class="flex-1 space-y-3">
        <h2 class="xp-title">{title}</h2>

        <p class="xp-date">{date}</p>

        {tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map(tag => (
              <span class="xp-tag" style={`background-color: ${tagColorMap[tag] || '#003366'}`}>
                {tag}
              </span>
            ))}
          </div>
        )}

        <p class="xp-preview">{preview}</p>

        <div class="pt-2">
          <button class="xp-button">
            Leia mais
          </button>
        </div>
      </div>
    </div>
  </article>
</a>

<style>
  /* Card Principal */
  .xp-card {
    background: #ECE9D8;
    border: 2px solid;
    border-color: #FFFFFF #808080 #808080 #FFFFFF;
    box-shadow: inset 1px 1px #FFFFFF, inset -1px -1px #404040;
    padding: 15px;
    margin-bottom: 15px;
    transition: none;
  }

  .xp-card:hover {
    background: #F5F5F5;
  }

  .xp-card:active {
    border-color: #808080 #FFFFFF #FFFFFF #808080;
    box-shadow: inset 1px 1px #404040, inset -1px -1px #FFFFFF;
  }

  /* Container da Imagem */
  .xp-image-container {
    width: 120px;
    height: 120px;
    border: 2px solid;
    border-color: #808080 #FFFFFF #FFFFFF #808080;
    padding: 2px;
    background: #FFFFFF;
  }

  .xp-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Título */
  .xp-title {
    font-family: 'Tahoma', sans-serif;
    color: #003399;
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 8px;
  }

  /* Data */
  .xp-date {
    font-family: 'Tahoma', sans-serif;
    color: #666666;
    font-size: 0.9rem;
  }

  /* Tags */
  .xp-tag {
    color: #FFFFFF;
    font-family: 'Tahoma', sans-serif;
    font-size: 0.8rem;
    padding: 3px 8px;
    border: 1px solid rgba(0,0,0,0.3);
    box-shadow:
      inset 1px 1px rgba(255,255,255,0.3),
      inset -1px -1px rgba(0,0,0,0.2);
    border-radius: 2px;
    text-shadow: 1px 1px rgba(0,0,0,0.2);
    transition: all 0.1s ease;
  }

  .xp-tag:hover {
    filter: brightness(110%);
    box-shadow:
      inset 1px 1px rgba(255,255,255,0.4),
      inset -1px -1px rgba(0,0,0,0.1);
  }

  /* Preview */
  .xp-preview {
    font-family: 'Tahoma', sans-serif;
    color: #000000;
    line-height: 1.5;
    font-size: 0.95rem;
    max-height: 4.5em;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
  }

  /* Botão */
  .xp-button {
    background: linear-gradient(to bottom, #F6F6F6, #DCDBDB);
    border: 2px solid;
    border-color: #FFFFFF #808080 #808080 #FFFFFF;
    box-shadow: inset 1px 1px #FFFFFF, inset -1px -1px #404040;
    color: #000000;
    font-family: 'Tahoma', sans-serif;
    font-size: 0.9rem;
    padding: 4px 12px;
  }

  .xp-button:hover {
    background: linear-gradient(to bottom, #FFF, #E9E9E9);
  }

  .xp-button:active {
    border-color: #808080 #FFFFFF #FFFFFF #808080;
    box-shadow: inset 1px 1px #404040, inset -1px -1px #FFFFFF;
    padding-top: 5px;
    padding-left: 13px;
  }

  /* Responsividade */
  @media (max-width: 768px) {
    .flex {
      flex-direction: column;
      gap: 12px;
    }

    .xp-image-container {
      width: 100%;
      height: 140px;
      margin-bottom: 0;
    }

    .xp-title {
      font-size: 1rem;
      line-height: 1.2;
      margin-bottom: 4px;
    }

    .xp-date {
      font-size: 0.85rem;
    }

    .xp-preview {
      font-size: 0.9rem;
      line-height: 1.4;
      -webkit-line-clamp: 3;
    }

    .xp-tag {
      font-size: 0.75rem;
      padding: 2px 6px;
    }

    .xp-button {
      padding: 3px 10px;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .xp-image-container {
      height: 120px;
    }

    .xp-card {
      padding: 10px;
    }
  }
</style>
