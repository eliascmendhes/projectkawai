---
interface Props {
  src: string;
  alt: string;
  title: string;
  description: string;
}

const { src, alt, title, description } = Astro.props;
---

<div class="group relative bg-white/90 backdrop-blur-sm p-6 rounded-3xl border-4 border-[#FFC0CB]
  hover:scale-102 hover:border-[#FF69B4] transition-all duration-300 shadow-lg hover:shadow-xl nostalgic-image-card">
  <div class="relative w-full h-48 mb-4 overflow-hidden rounded-2xl">
    <img
      src={src}
      alt={alt}
      loading="lazy"
      class="w-full h-full object-cover transition-all duration-300 group-hover:scale-110"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-pink-200/50 to-transparent
      group-hover:from-pink-300/60 transition-all duration-300"></div>

    <div class="absolute top-2 left-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 nostalgic-emoji">âœ¨</div>
    <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 nostalgic-emoji">ðŸŒ¸</div>
  </div>

  <div class="relative z-10">
    <h3 class="font-cherry text-xl text-[#FF1493] mb-2 group-hover:scale-105 transition-transform duration-300">
      {title}
    </h3>
    <p class="font-pixel text-[#8A4FFF] transform-gpu transition-all duration-300 group-hover:text-[#FF69B4]">
      {description}
    </p>
  </div>

  <div class="absolute inset-0 bg-gradient-to-br from-pink-200/0 to-purple-200/0
    group-hover:from-pink-200/20 group-hover:to-purple-200/20 rounded-3xl transition-all duration-300"></div>
</div>

<style>
  /* Estilos para o modo retrÃ´ */
  :global(.nostalgic-mode) .nostalgic-image-card {
    background: #f5f5f5;
    border: 1px solid #999;
    border-radius: 0;
    box-shadow: 2px 2px 0 #666;
    transition: none;
    padding: 8px;
    width: 100%;
  }

  :global(.nostalgic-mode) .nostalgic-image-card img {
    border: 1px solid #999;
    border-radius: 0;
    filter: grayscale(20%);
    image-rendering: pixelated;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  :global(.nostalgic-mode) .nostalgic-image-card:hover {
    transform: none;
    box-shadow: 2px 2px 0 #666;
  }

  :global(.nostalgic-mode) .nostalgic-image-card h3 {
    font-family: 'MS Gothic', monospace;
    color: #333;
  }

  :global(.nostalgic-mode) .nostalgic-image-card p {
    font-family: 'MS Gothic', monospace;
    color: #666;
  }

  :global(.nostalgic-mode) .nostalgic-image-card .bg-gradient-to-t,
  :global(.nostalgic-mode) .nostalgic-image-card .bg-gradient-to-br {
    display: none;
  }

  :global(.nostalgic-mode) .nostalgic-emoji {
    filter: grayscale(100%);
  }

  :global(.nostalgic-mode) .nostalgic-image-card .relative {
    border: 1px solid #999;
    padding: 4px;
  }

  :global(.nostalgic-mode) .nostalgic-image-card .relative::after {
    display: none;
  }
</style>
