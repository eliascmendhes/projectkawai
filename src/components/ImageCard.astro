---
interface Props {
  src: string;
  alt: string;
  title: string;
  description: string;
}

const { src, alt, title, description } = Astro.props;
---

<div class="group relative bg-white/90 backdrop-blur-sm p-6 rounded-3xl border-4 border-[#FFC0CB]
  hover:scale-102 hover:border-[#FF69B4] transition-all duration-300 shadow-lg hover:shadow-xl nostalgic-image-card">
  <div class="relative w-full h-48 mb-4 overflow-hidden rounded-2xl nostalgic-image-container">
    <img
      src={src}
      alt={alt}
      loading="lazy"
      class="w-full h-full object-cover transition-all duration-300 group-hover:scale-110 nostalgic-image"
    />
    <div class="kawaii-content">
      <div class="absolute inset-0 bg-gradient-to-t from-pink-200/50 to-transparent
        group-hover:from-pink-300/60 transition-all duration-300"></div>
      <div class="absolute top-2 left-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">âœ¨</div>
      <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">ðŸŒ¸</div>
    </div>
  </div>

  <div class="relative z-10">
    <h3 class="font-cherry text-xl text-[#FF1493] mb-2 group-hover:scale-105 transition-transform duration-300 nostalgic-title">
      <span class="kawaii-content">{title}</span>
      <span class="retro-content">â–º {title}</span>
    </h3>
    <p class="font-pixel text-[#8A4FFF] transform-gpu transition-all duration-300 group-hover:text-[#FF69B4] nostalgic-description">
      {description}
    </p>
  </div>
</div>

<style>
  :global(.nostalgic-mode) .nostalgic-image-card {
    background: #c0c0c0;
    border: 2px solid;
    border-color: #ffffff #404040 #404040 #ffffff;
    box-shadow: inset -1px -1px #808080, inset 1px 1px #dfdfdf;
    border-radius: 0;
    padding: 8px;
    transition: none;
    cursor: pointer;
  }

  :global(.nostalgic-mode) .nostalgic-image-card:hover {
    background: #d4d0c8;
  }

  :global(.nostalgic-mode) .nostalgic-image-card:active {
    border-color: #404040 #ffffff #ffffff #404040;
    box-shadow: inset 1px 1px #808080, inset -1px -1px #dfdfdf;
    padding-top: 9px;
    padding-left: 9px;
  }

  :global(.nostalgic-mode) .nostalgic-image-container {
    border: 2px solid;
    border-color: #404040 #ffffff #ffffff #404040;
    box-shadow: inset 1px 1px #808080;
    border-radius: 0;
    padding: 4px;
    background: #ffffff;
    margin-bottom: 8px;
    overflow: hidden;
  }

  :global(.nostalgic-mode) .nostalgic-image {
    border: none;
    border-radius: 0;
    filter: grayscale(30%);
    image-rendering: pixelated;
    transform: none !important;
    transition: none !important;
  }

  :global(.nostalgic-mode) .nostalgic-title {
    font-family: 'MS Gothic', monospace;
    color: #000080;
    font-size: 1rem;
    font-weight: bold;
    margin-bottom: 4px;
    padding: 2px 0;
    transform: none !important;
  }

  :global(.nostalgic-mode) .nostalgic-description {
    font-family: 'MS Gothic', monospace;
    color: #000000;
    font-size: 0.875rem;
    line-height: 1.4;
  }

  :global(.nostalgic-mode) .nostalgic-image-container::before {
    content: "[ IMG ]";
    position: absolute;
    top: 4px;
    right: 4px;
    background: #000080;
    color: #ffffff;
    font-family: 'MS Gothic', monospace;
    font-size: 0.75rem;
    padding: 1px 4px;
    z-index: 1;
  }

  :global(.nostalgic-mode) .bg-gradient-to-t,
  :global(.nostalgic-mode) .bg-gradient-to-br {
    display: none;
  }

  .kawaii-content {
    display: block;
  }

  .retro-content {
    display: none;
  }

  :global(.nostalgic-mode) .kawaii-content {
    display: none !important;
  }

  :global(.nostalgic-mode) .retro-content {
    display: block !important;
  }

  :global(.nostalgic-mode) .transition-all,
  :global(.nostalgic-mode) .transition-transform,
  :global(.nostalgic-mode) .transition-opacity,
  :global(.nostalgic-mode) .duration-300 {
    transition: none !important;
  }

  :global(.nostalgic-mode) .hover\:scale-102:hover,
  :global(.nostalgic-mode) .hover\:scale-110:hover,
  :global(.nostalgic-mode) .group-hover\:scale-105:hover {
    transform: none !important;
  }
</style>
