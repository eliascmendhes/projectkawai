---
interface Props {
  src: string;
  alt: string;
  title: string;
  description: string;
}

const { src, alt, title, description } = Astro.props;
---

<div class="xp-image-card">
  <div class="xp-image-container">
    <div class="xp-image-header">
      <span class="xp-image-title">Visualizar Imagem</span>
      <div class="window-controls">
        <span class="minimize">_</span>
        <span class="maximize">□</span>
        <span class="close">×</span>
      </div>
    </div>
    <img
      src={src}
      alt={alt}
      loading="lazy"
      class="xp-image"
    />
  </div>
  <div class="xp-content">
    <h3 class="xp-title">► {title}</h3>
    <p class="xp-description">{description}</p>
  </div>
</div>

<style>
  .xp-image-card {
    background: #ECE9D8;
    border: 2px solid;
    border-color: #FFFFFF #808080 #808080 #FFFFFF;
    box-shadow: inset 1px 1px #FFFFFF, inset -1px -1px #404040;
    padding: 3px;
    transition: background-color 0.1s;
  }

  .xp-image-card:hover {
    background: #F0F0F0;
  }

  /* Container da Imagem */
  .xp-image-container {
    border: 1px solid #0054E3;
    background: #FFFFFF;
  }

  /* Header do Container */
  .xp-image-header {
    background: linear-gradient(to right, #0054E3, #2787E9, #0054E3);
    padding: 4px 8px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: white;
    font-size: 0.8rem;
    font-family: 'Tahoma', sans-serif;
  }

  .window-controls {
    display: flex;
    gap: 4px;
  }

  .window-controls span {
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to bottom, #FFF, #DFDFDF);
    border: 1px solid #0054E3;
    border-radius: 2px;
    color: #000;
    font-size: 0.7rem;
    cursor: pointer;
  }

  /* Imagem */
  .xp-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
    border: 1px solid #D4D0C8;
    padding: 2px;
  }

  /* Conteúdo */
  .xp-content {
    padding: 8px;
    background: #FFFFFF;
    border: 1px solid #D4D0C8;
    margin-top: 3px;
  }

  /* Título */
  .xp-title {
    font-family: 'Tahoma', sans-serif;
    color: #003399;
    font-size: 1rem;
    font-weight: bold;
    margin-bottom: 4px;
  }

  /* Descrição */
  .xp-description {
    font-family: 'Tahoma', sans-serif;
    color: #000000;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  /* Efeito de Clique */
  .xp-image-card:active {
    border-color: #808080 #FFFFFF #FFFFFF #808080;
    box-shadow: inset 1px 1px #404040, inset -1px -1px #FFFFFF;
  }

  /* Responsividade */
  @media (max-width: 640px) {
    .xp-image {
      height: 180px;
    }
  }
</style>
