---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card nostalgic-card">
	<a href={href}>
		<h2 class="card-title nostalgic-title">
			<span class="kawaii-content">{title} ♡</span>
			<span class="retro-content">{title}</span>
			<span class="kawaii-content arrow">→</span>
			<span class="retro-content arrow">[→]</span>
		</h2>
		<p class="card-body nostalgic-body">
			{body}
		</p>
	</a>
</li>

<style>
	/* Estilos Kawaii */
	.kawaii-content {
		display: block;
	}

	.retro-content {
		display: none;
	}

	.link-card {
		list-style: none;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		padding: 1.25rem;
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(8px);
		border-radius: 1rem;
		border: 4px solid #FFC0CB;
		box-shadow: 0 4px 15px rgba(255, 105, 180, 0.15);
		transition: all 0.3s ease;
	}

	.link-card:hover {
		transform: translateY(-2px);
		border-color: #FF69B4;
		box-shadow: 0 6px 20px rgba(255, 105, 180, 0.2);
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.card-title {
		font-size: 1.5rem;
		font-family: 'Cherry Bomb One', cursive;
		color: #FF69B4;
		display: flex;
		justify-content: space-between;
		align-items: center;
		transition: color 0.3s ease;
	}

	.card-body {
		font-size: 1rem;
		font-family: 'Mochiy Pop One', sans-serif;
		color: #8A4FFF;
		line-height: 1.5;
	}

	.arrow {
		font-size: 1.25rem;
		opacity: 0.8;
		transition: transform 0.3s ease, opacity 0.3s ease;
	}

	.link-card:hover .arrow {
		transform: translateX(4px);
		opacity: 1;
	}

	/* Estilos para o modo retrô */
	:global(.nostalgic-mode) .nostalgic-card {
		background: #c0c0c0;
		border: 2px solid;
		border-color: #ffffff #404040 #404040 #ffffff;
		box-shadow: inset -1px -1px #808080, inset 1px 1px #dfdfdf;
		border-radius: 0;
		padding: 8px;
		transform: none !important;
		transition: none;
		backdrop-filter: none;
	}

	:global(.nostalgic-mode) .nostalgic-card > a {
		text-decoration: none;
		gap: 4px;
	}

	:global(.nostalgic-mode) .nostalgic-title {
		font-family: 'MS Gothic', monospace;
		color: #000080;
		font-size: 1rem;
		font-weight: bold;
		padding: 2px 0;
		border-bottom: 1px solid;
		border-color: #808080 #ffffff #ffffff #808080;
	}

	:global(.nostalgic-mode) .nostalgic-body {
		font-family: 'MS Gothic', monospace;
		color: #000000;
		font-size: 0.875rem;
		line-height: 1.4;
		padding: 4px 0;
	}

	:global(.nostalgic-mode) .nostalgic-card:hover {
		background: #d4d0c8;
	}

	:global(.nostalgic-mode) .nostalgic-card:active {
		border-color: #404040 #ffffff #ffffff #404040;
		box-shadow: inset 1px 1px #808080, inset -1px -1px #dfdfdf;
		padding-top: 9px;
		padding-left: 9px;
	}

	/* Controle de visibilidade */
	:global(.nostalgic-mode) .kawaii-content {
		display: none !important;
	}

	:global(.nostalgic-mode) .retro-content {
		display: block !important;
	}

	/* Remove animações no modo retrô */
	:global(.nostalgic-mode) * {
		transition: none !important;
		transform: none !important;
	}
</style>
