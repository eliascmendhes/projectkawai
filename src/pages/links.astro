---
import Layout from '../layouts/Layout.astro';

const links = [
  {
    category: "Perfis Pessoais",
    items: [
      {
        title: "Letterboxd",
        url: "https://letterboxd.com/amitysideral/",
        icon: "►",
        description: "Meu diário de filmes e séries"
      }
    ]
  },
  {
    category: "Música e Entretenimento",
    items: [
      {
        title: "Steam",
        url: "https://steamcommunity.com/profiles/76561198421883604/",
        icon: "►",
        description: "Perfil de jogos e biblioteca"
      }
    ]
  }
];
---

<Layout title="Links">
  <div class="window max-w-4xl mx-auto">
    <div class="window-header">
      <div class="window-title">Links Úteis</div>
      <div class="window-controls">
        <span class="minimize">_</span>
        <span class="maximize">□</span>
        <span class="close">×</span>
      </div>
    </div>

    <div class="window-content">
      {links.map(section => (
        <div class="xp-section">
          <div class="xp-section-header">
            <h2 class="xp-section-title">[ {section.category} ]</h2>
          </div>
          <div class="xp-grid">
            {section.items.map(link => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="xp-link-card"
              >
                <div class="xp-card-content">
                  <span class="xp-icon">{link.icon}</span>
                  <div class="xp-text-content">
                    <h3 class="xp-link-title">{link.title}</h3>
                    <p class="xp-description">{link.description}</p>
                  </div>
                  <span class="xp-arrow">[→]</span>
                </div>
              </a>
            ))}
          </div>
        </div>
      ))}

      <div class="xp-contact-section">
        <h3 class="xp-contact-title">◆ Entre em contato ◆</h3>
        <p class="xp-contact-text">Sim, vou receber essa mensagem!</p>
        <a href="/contact" class="xp-button">
          [ Formulário de Contato ]
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .window {
    background: #ECE9D8;
    border: 1px solid #0054E3;
    border-radius: 8px 8px 0 0;
    box-shadow: 2px 2px 10px rgba(0,0,0,0.3);
    margin: 20px auto;
  }

  .window-header {
    background: linear-gradient(to right, #0054E3, #2787E9, #0054E3);
    padding: 5px 10px;
    border-radius: 7px 7px 0 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: white;
    font-weight: bold;
  }

  .window-controls {
    display: flex;
    gap: 4px;
  }

  .window-controls span {
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to bottom, #FFF, #DFDFDF);
    border: 1px solid #0054E3;
    border-radius: 2px;
    color: #000;
    font-size: 0.7rem;
    cursor: pointer;
  }

  .window-content {
    padding: 16px;
  }

  .xp-section {
    margin-bottom: 24px;
  }

  .xp-section-header {
    border-bottom: 2px solid;
    border-color: #808080 #FFFFFF #FFFFFF #808080;
    margin-bottom: 16px;
  }

  .xp-section-title {
    font-family: 'Tahoma', sans-serif;
    color: #003399;
    font-size: 1.2rem;
    padding-bottom: 8px;
  }

  .xp-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 16px;
  }

  .xp-link-card {
    background: #FFFFFF;
    border: 2px solid;
    border-color: #FFFFFF #808080 #808080 #FFFFFF;
    box-shadow: inset 1px 1px #FFFFFF, inset -1px -1px #404040;
    text-decoration: none;
  }

  .xp-card-content {
    padding: 12px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .xp-icon {
    color: #003399;
    font-size: 1.2rem;
  }

  .xp-text-content {
    flex: 1;
  }

  .xp-link-title {
    font-family: 'Tahoma', sans-serif;
    color: #0054E3;
    font-size: 1rem;
    margin-bottom: 4px;
  }

  .xp-description {
    font-family: 'Tahoma', sans-serif;
    color: #000000;
    font-size: 0.9rem;
  }

  .xp-arrow {
    color: #003399;
    opacity: 0;
  }

  .xp-link-card:hover .xp-arrow {
    opacity: 1;
  }

  .xp-link-card:hover {
    background: #F0F0F0;
  }

  .xp-link-card:active {
    border-color: #808080 #FFFFFF #FFFFFF #808080;
    padding-top: 1px;
    padding-left: 1px;
  }

  .xp-contact-section {
    background: #FFFFFF;
    border: 2px solid;
    border-color: #FFFFFF #808080 #808080 #FFFFFF;
    box-shadow: inset 1px 1px #FFFFFF, inset -1px -1px #404040;
    padding: 16px;
    text-align: center;
    margin-top: 24px;
  }

  .xp-contact-title {
    font-family: 'Tahoma', sans-serif;
    color: #003399;
    font-size: 1.2rem;
    margin-bottom: 8px;
  }

  .xp-contact-text {
    font-family: 'Tahoma', sans-serif;
    color: #000000;
    margin-bottom: 16px;
  }

  .xp-button {
    background: linear-gradient(to bottom, #F6F6F6, #DCDBDB);
    border: 2px solid;
    border-color: #FFFFFF #808080 #808080 #FFFFFF;
    box-shadow: inset 1px 1px #FFFFFF, inset -1px -1px #404040;
    color: #000000;
    font-family: 'Tahoma', sans-serif;
    padding: 6px 16px;
    text-decoration: none;
    display: inline-block;
  }

  .xp-button:hover {
    background: linear-gradient(to bottom, #FFF, #E9E9E9);
  }

  .xp-button:active {
    border-color: #808080 #FFFFFF #FFFFFF #808080;
    box-shadow: inset 1px 1px #404040, inset -1px -1px #FFFFFF;
    padding-top: 7px;
    padding-left: 17px;
  }

  @media (max-width: 640px) {
    .xp-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
