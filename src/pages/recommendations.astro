// Função auxiliar para verificar se a imagem é uma URL ou um import local
function getImageSrc(image: string | { default: string }) {
  return typeof image === 'string' ? image : image.default;
}
---

<Layout title="Recomendações">
  <div class="max-w-4xl mx-auto">
    <PageTitle title="Meus favoritos ♡" />
    
    <div class="space-y-8">
      <section class="bg-white/80 backdrop-blur-sm p-6 rounded-2xl border-4 border-kawaii-pink">
        <h2 class="font-cherry text-2xl text-pink-600 mb-4">♫ Musica ♫</h2>
        <div class="grid gap-4 md:grid-cols-2">
          {recommendations.music.map(item => (
            <div class="bg-white/60 p-4 rounded-lg flex gap-4">
              <div class="w-24 h-24 flex-shrink-0">
                <img 
                  src={getImageSrc(item.image)} 
                  alt={`Capa de ${item.title}`}
                  class="w-full h-full object-cover rounded-lg"
                  loading="lazy"
                />
              </div>
              <div>
                <h3 class="font-cherry text-xl text-pink-500">{item.title}</h3>
                <p class="font-pixel text-sm">Por: {item.artist}</p>
                <p class="font-pixel text-sm">tipo: {item.type}</p>
                <p class="text-pink-400 mt-2">{item.rating}</p>
              </div>
            </div>
          ))}
        </div>
      </section>

      <section class="bg-white/80 backdrop-blur-sm p-6 rounded-2xl border-4 border-kawaii-blue">
        <h2 class="font-cherry text-2xl text-pink-600 mb-4">🎬 Filmes</h2>
        <div class="grid gap-4 md:grid-cols-2">
          {recommendations.movies.map(item => (
            <div class="bg-white/60 p-4 rounded-lg flex gap-4">
              <div class="w-24 h-36 flex-shrink-0">
                <img 
                  src={getImageSrc(item.image)} 
                  alt={`Poster de ${item.title}`}
                  class="w-full h-full object-cover rounded-lg"
                  loading="lazy"
                />
              </div>
              <div>
                <h3 class="font-cherry text-xl text-pink-500">{item.title}</h3>
                <p class="font-pixel text-sm">Ano: {item.year}</p>
                <p class="font-pixel text-sm">Genero: {item.genre}</p>
                <p class="text-pink-400 mt-2">{item.rating}</p>
              </div>
            </div>
          ))}
        </div>
      </section>

      <section class="bg-white/80 backdrop-blur-sm p-6 rounded-2xl border-4 border-kawaii-mint">
        <h2 class="font-cherry text-2xl text-pink-600 mb-4">🎮 Jogos</h2>
        <div class="grid gap-4 md:grid-cols-2">
          {recommendations.games.map(item => (
            <div class="bg-white/60 p-4 rounded-lg flex gap-4">
              <div class="w-24 h-24 flex-shrink-0">
                <img 
                  src={getImageSrc(item.image)} 
                  alt={`Capa de ${item.title}`}
                  class="w-full h-full object-cover rounded-lg"
                  loading="lazy"
                />
              </div>
              <div>
                <h3 class="font-cherry text-xl text-pink-500">{item.title}</h3>
                <p class="font-pixel text-sm">Plataforma: {item.platform}</p>
                <p class="font-pixel text-sm">tipo: {item.type}</p>
                <p class="text-pink-400 mt-2">{item.rating}</p>
              </div>
            </div>
          ))}
        </div>
      </section>
    </div>
  </div>
</Layout>
