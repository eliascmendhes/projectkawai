<style>
  /* Estilos Kawaii atualizados - Estilo Japon√™s */
  .category-btn {
    background: rgba(255, 255, 255, 0.9);
    border: 3px solid #FFC0CB;
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
    color: #FF1493;
    font-family: 'Mochiy Pop One', sans-serif;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .kawaii-content {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .kawaii-icon {
    font-size: 1.2rem;
    display: inline-block;
    transform-origin: center;
    transition: transform 0.3s ease;
  }

  .kawaii-text {
    font-size: 1rem;
  }

  /* Efeito mochi apenas em hover */
  .category-btn:hover {
    background: #FFE4E1;
    border-color: #FF69B4;
    transform: scale(1.03) translateY(-1px);
    box-shadow: 0 4px 12px rgba(255, 105, 180, 0.2);
  }

  .category-btn:hover .kawaii-icon {
    transform: scale(1.1) rotate(5deg);
  }

  /* Estilo ativo */
  .category-btn.active {
    background: #FF69B4;
    color: white;
    border-color: #FF1493;
    box-shadow: 0 4px 15px rgba(255, 20, 147, 0.3);
  }

  /* Cards com estilo kawaii japon√™s */
  .recommendation-card {
    background: rgba(255, 255, 255, 0.95);
    border: 3px solid #FFB6C1;
    border-radius: 15px;
    padding: 1rem;
    transition: all 0.3s ease;
    position: relative;
  }

  /* Anima√ß√µes mais sutis nos cards */
  .recommendation-card:hover {
    transform: translateY(-2px);
    border-color: #FF69B4;
    box-shadow: 0 4px 12px rgba(255, 105, 180, 0.2);
  }

  /* Decora√ß√£o com sakura apenas em hover */
  .recommendation-card:hover::before {
    content: 'üå∏';
    position: absolute;
    top: -10px;
    right: -10px;
    font-size: 1.2rem;
    opacity: 0.7;
    animation: appear-rotate 0.3s ease-in-out forwards;
  }

  @keyframes appear-rotate {
    from {
      opacity: 0;
      transform: rotate(-15deg) scale(0.8);
    }
    to {
      opacity: 0.7;
      transform: rotate(0) scale(1);
    }
  }

  /* Controle de visibilidade */
  .kawaii-content {
    display: flex;
  }

  .retro-content {
    display: none;
  }

  /* Modo Retr√¥ */
