<style>
  /* Estilos Kawaii */
  body:not(.nostalgic-mode) {
    .kawaii-profile {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .profile-card {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 30px;
      padding: 2rem;
      box-shadow:
        0 10px 30px rgba(255, 182, 193, 0.3),
        inset 0 0 20px rgba(255, 255, 255, 0.5);
      backdrop-filter: blur(10px);
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .profile-header {
      position: relative;
      margin-bottom: 1.5rem;
    }

    .profile-image {
      width: 200px;
      height: 200px;
      border-radius: 50%;
      border: 8px solid rgba(255, 182, 193, 0.6);
      margin: 0 auto;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .profile-decoration {
      position: absolute;
      width: 100%;
      top: 50%;
      left: 0;
      transform: translateY(-50%);
      z-index: -1;
    }

    .star-left, .star-right {
      position: absolute;
      font-size: 2rem;
      color: #FFB7B2;
      animation: twinkle 2s infinite;
    }

    .star-left { left: 15%; animation-delay: 0.5s; }
    .star-right { right: 15%; animation-delay: 1s; }

    .name {
      font-size: 2.5rem;
      background: linear-gradient(45deg, #FF69B4, #8A4FFF);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 1rem;
    }

    .stats {
      display: flex;
      justify-content: center;
      gap: 2rem;
      font-size: 1.1rem;
    }

    .stat-item {
      background: rgba(255, 182, 193, 0.2);
      padding: 0.5rem 1rem;
      border-radius: 20px;
      color: #FF69B4;
      transition: all 0.3s ease;
    }

    .stat-item:hover {
      transform: scale(1.1);
      background: rgba(255, 182, 193, 0.4);
    }

    .about-card {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 25px;
      padding: 2rem;
      text-align: center;
      font-size: 1.2rem;
      line-height: 1.6;
      color: #8A4FFF;
      box-shadow: 0 5px 20px rgba(255, 182, 193, 0.2);
    }

    .interests-container {
      margin-top: 2rem;
    }

    .interests-title {
      text-align: center;
      font-size: 1.8rem;
      color: #FF69B4;
      margin-bottom: 2rem;
    }

    .interests-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }

    .interest-bubble {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 20px;
      padding: 1.5rem;
      display: flex;
      align-items: center;
      gap: 1rem;
      transition: all 0.3s ease;
      box-shadow: 0 5px 15px rgba(255, 182, 193, 0.2);
    }

    .interest-bubble:hover {
      transform: translateY(-5px) scale(1.02);
      box-shadow: 0 8px 20px rgba(255, 182, 193, 0.3);
    }

    .interest-icon {
      font-size: 2rem;
      animation: float 3s ease-in-out infinite;
    }

    .interest-text {
      display: flex;
      flex-direction: column;
      gap: 0.3rem;
    }

    .interest-text strong {
      color: #FF69B4;
      font-size: 1.2rem;
    }

    .interest-text span {
      color: #8A4FFF;
      font-size: 0.9rem;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-5px); }
    }

    @keyframes twinkle {
      0%, 100% { opacity: 0.3; transform: scale(0.8); }
      50% { opacity: 1; transform: scale(1.2); }
    }
  }

  /* Estilos Retr√¥ */
  :global(.nostalgic-mode) {
    .profile-container {
      background: #d4d0c8;
      border: 2px solid #808080;
      padding: 1rem;
      box-shadow: inset 1px 1px #fff, inset -1px -1px #404040;
    }

    .profile-image {
