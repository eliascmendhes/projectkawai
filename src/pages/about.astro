  }

  /* Mostrar apenas conte√∫do kawaii quando N√ÉO estiver em modo retr√¥ */
  body:not(.nostalgic-mode) .kawaii-content {
    display: inline-block;
  }

  /* Mostrar apenas conte√∫do retr√¥ quando estiver em modo retr√¥ */
  :global(.nostalgic-mode) .retro-content {
    display: inline-block;
  }

  /* Garantir que os conte√∫dos n√£o apare√ßam simultaneamente */
  :global(.nostalgic-mode) .kawaii-content {
