<style>
  /* Janela Principal */
  .window {
    background: #ECE9D8;
    border: 1px solid #0054E3;
    border-radius: 8px 8px 0 0;
    box-shadow: 2px 2px 10px rgba(0,0,0,0.3);
    margin: 20px;
  }

  .window-header {
    background: linear-gradient(to right, #0054E3, #2787E9, #0054E3);
    padding: 5px 10px;
    border-radius: 7px 7px 0 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: white;
    font-weight: bold;
  }

  .window-controls {
    display: flex;
    gap: 4px;
  }

  .window-controls span {
    width: 22px;
    height: 22px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to bottom, #FFF, #DFDFDF);
    border: 1px solid #0054E3;
    border-radius: 3px;
    color: #000;
    cursor: pointer;
  }

  .window-content {
    padding: 20px;
    background: #fff;
  }

  /* Se√ß√£o de Perfil */
  .profile-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    padding: 15px;
    background: #F5F5F5;
    border: 1px solid #D4D0C8;
    margin-bottom: 20px;
    text-align: center;

    @media (min-width: 640px) {
      flex-direction: row;
      text-align: left;
    }
  }

  /* Container da foto de perfil com status */
  .profile-pic-container {
    position: relative;
    width: 100px;
    height: 100px;
  }

  .profile-pic {
    width: 100px;
    height: 100px;
    border: 2px solid #0054E3;
  }

  /* Indicador de Status Online */
  .status-indicator {
    position: absolute;
    bottom: -2px;
    right: -2px;
    width: 16px;
    height: 16px;
    background: linear-gradient(to bottom right, #00FF00, #00CC00);
    border: 2px solid #FFFFFF;
    border-radius: 50%;
    box-shadow: 0 0 4px rgba(0,0,0,0.3);
  }

  /* Anima√ß√£o sutil de pulsa√ß√£o */
  @keyframes pulse {
    0% {
      box-shadow: 0 0 4px rgba(0,255,0,0.3);
      transform: scale(1);
    }
    50% {
      box-shadow: 0 0 10px rgba(0,255,0,0.6);
      transform: scale(1.05);
    }
    100% {
      box-shadow: 0 0 4px rgba(0,255,0,0.3);
      transform: scale(1);
    }
  }

  .status-indicator {
    animation: pulse 2s ease-in-out infinite;
  }

  .user-info {
    h2 {
      font-size: 1.5rem;
      color: #0054E3;
      margin-bottom: 5px;
    }
  }

  .user-details {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
    color: #000000;
    font-size: 1rem;

    @media (min-width: 640px) {
      justify-content: flex-start;
    }
  }

  .user-details span:nth-child(even) {
    @media (max-width: 639px) {
      display: none;
    }
  }

  .user-details span:nth-child(odd) {
    @media (max-width: 639px) {
      display: block;
      width: 100%;
    }
  }

  /* Caixas de Informa√ß√£o */
  .info-box {
    border: 1px solid #D4D0C8;
    margin-bottom: 20px;
  }

  .info-header {
    background: linear-gradient(to bottom, #F6F6F6, #DCDBDB);
    padding: 5px 10px;
    border-bottom: 1px solid #D4D0C8;
    font-weight: bold;
    color: #000000;
  }

  .info-content {
    padding: 15px;
    line-height: 1.5;
    color: #000000;
    font-size: 1rem;
  }

  /* Grade de Interesses */
  .interests-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
    padding: 15px;
  }

  .interest-item {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px;
    background: #F5F5F5;
    border: 1px solid #D4D0C8;
    transition: all 0.2s;
  }

  .interest-item:hover {
    background: #E8E8E8;
    border-color: #0054E3;
  }

  .interest-icon {
    font-size: 1.5rem;
  }

  .interest-details {
    display: flex;
    flex-direction: column;

    strong {
      color: #003399;
      font-size: 1.1rem;
    }

    span {
      font-size: 1rem;
      color: #000000;
    }
  }

  /* Anima√ß√£o de abertura da janela */
  @keyframes windowOpen {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .window {
    animation: windowOpen 0.3s ease-out;
  }
</style>
