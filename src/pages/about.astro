---
import Layout from '../layouts/Layout.astro';
import PageTitle from '../components/PageTitle.astro';
---

<Layout title="Sobre mim- Meu blog cute">
  <div class="max-w-3xl mx-auto">
    <PageTitle title="Sobre mim♡" />
    
    <div class="bg-white/80 backdrop-blur-sm p-8 rounded-2xl border-4 border-kawaii-lavender">
      <div class="text-center mb-8">
        <div class="w-48 h-48 mx-auto relative">
          <img
            src="/images/gif07.gif"
            alt="Profile Picture"
            class="w-full h-full object-cover rounded-full border-4 border-kawaii-lavender"
          />
          <!-- <img
            src="/images/gif06.gif"
            alt="Sparkles"
