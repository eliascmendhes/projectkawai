---
import Layout from '../layouts/Layout.astro';
import PageTitle from '../components/PageTitle.astro';
---

<Layout title="Contato - Meu blog cute">
  <div class="max-w-3xl mx-auto">
    <PageTitle title="Entre em contato ‚ô°" />

    <div class="bg-white/90 backdrop-blur-sm p-8 rounded-2xl border-4 border-[#FFB6C1] shadow-lg nostalgic-container">
      <div class="text-center mb-8">
        <h2 class="font-[Mochiy+Pop+One] text-xl text-[#FF1493] mb-4 nostalgic-title">
          üå∏ Sim, vou receber essa mensagem! ‚úß
        </h2>
      </div>

      <form action={import.meta.env.PUBLIC_FORMSPREE_URL} method="POST" class="space-y-6">
        <div>
          <label for="name" class="block font-[Mochiy+Pop+One] text-lg text-[#FF1493] mb-2 nostalgic-label">
            üç° Seu nome ‚ô°
          </label>
          <input
            type="text"
            name="name"
            id="name"
            placeholder="Como posso te chamar?"
            class="w-full px-4 py-3 rounded-xl border-2 border-[#FFB6C1] focus:border-[#FF69B4] focus:ring-2 focus:ring-[#FFD1DC]
            font-[Mochiy+Pop+One] text-[#333] transition-all hover:shadow-md nostalgic-input"
            required
          />
        </div>

        <div>
          <label for="email" class="block font-[Mochiy+Pop+One] text-lg text-[#FF1493] mb-2 nostalgic-label">
            üìß Email ‚ô°
          </label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Seu melhor email"
            class="w-full px-4 py-3 rounded-xl border-2 border-[#FFB6C1] focus:border-[#FF69B4] focus:ring-2 focus:ring-[#FFD1DC]
            font-[Mochiy+Pop+One] text-[#333] transition-all hover:shadow-md nostalgic-input"
            required
          />
        </div>

        <div>
          <label for="message" class="block font-[Mochiy+Pop+One] text-lg text-[#FF1493] mb-2 nostalgic-label">
            üíå Sua mensagem ‚ô°
          </label>
          <textarea
            name="message"
            id="message"
            rows="6"
            placeholder="O que gostaria de me dizer?"
            class="w-full px-4 py-3 rounded-xl border-2 border-[#FFB6C1] focus:border-[#FF69B4] focus:ring-2 focus:ring-[#FFD1DC]
            font-[Mochiy+Pop+One] text-[#333] transition-all hover:shadow-md nostalgic-input"
            required
          ></textarea>
        </div>

        <button
          type="submit"
          class="w-full bg-[#FFB6C1] hover:bg-[#FF69B4] text-white font-[Mochiy+Pop+One] text-lg py-3 px-6
          rounded-xl border-2 border-[#FF69B4] transition-all hover:scale-105 hover:shadow-lg nostalgic-button"
        >
          ‚úß Enviar mensagem ‚úß
        </button>
      </form>
    </div>
  </div>
</Layout>

<style>
  /* Estilos para o modo retr√¥ */
  :global(.nostalgic-mode) .nostalgic-container {
    background: #f5f5f5;
    border: 1px solid #999;
    border-radius: 0;
    box-shadow: 2px 2px 0 #666;
    padding: 1rem;
  }

  :global(.nostalgic-mode) .nostalgic-title {
    font-family: 'MS Gothic', monospace;
    color: #333;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  :global(.nostalgic-mode) .nostalgic-label {
    font-family: 'MS Gothic', monospace;
    color: #333;
  }

  :global(.nostalgic-mode) .nostalgic-input,
  :global(.nostalgic-mode) textarea {
    background: #fff;
    border: 1px solid #999;
    border-radius: 0;
    font-family: 'MS Gothic', monospace;
    color: #333;
    padding: 0.5rem;
    box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.1);
    transition: none;
  }

  :global(.nostalgic-mode) .nostalgic-input:focus,
  :global(.nostalgic-mode) textarea:focus {
    border-color: #666;
    outline: none;
    box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.2);
  }

  :global(.nostalgic-mode) .nostalgic-button {
    background: #e5e5e5;
    border: 1px solid #999;
    border-radius: 0;
    color: #333;
    font-family: 'MS Gothic', monospace;
    box-shadow: 2px 2px 0 #666;
    transition: none;
    transform: none !important;
  }

  :global(.nostalgic-mode) .nostalgic-button:hover {
    background: #d5d5d5;
    box-shadow: 2px 2px 0 #666;
  }

  :global(.nostalgic-mode) .nostalgic-button:active {
    background: #ccc;
    box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.2);
  }

  /* Remove todas as anima√ß√µes no modo retr√¥ */
  :global(.nostalgic-mode) .transition-all {
    transition: none !important;
  }

  :global(.nostalgic-mode) .hover\:scale-105:hover {
    transform: none !important;
  }

  :global(.nostalgic-mode) .hover\:shadow-md:hover,
  :global(.nostalgic-mode) .hover\:shadow-lg:hover {
    box-shadow: none !important;
  }

  /* Ajustes para emojis no modo retr√¥ */
  :global(.nostalgic-mode) .nostalgic-label::before,
  :global(.nostalgic-mode) .nostalgic-title span {
    filter: grayscale(100%);
  }

  /* Ajustes para o foco no modo retr√¥ */
  :global(.nostalgic-mode) .focus\:ring-2:focus {
    box-shadow: none;
    outline: 1px dotted #666;
  }
</style>
