---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contato">
  <div class="window max-w-3xl mx-auto">
    <div class="window-header">
      <div class="window-title">Formulário de Contato</div>
      <div class="window-controls">
        <span class="minimize">_</span>
        <span class="maximize">□</span>
        <span class="close">×</span>
      </div>
    </div>

    <div class="window-content">
      <form action={import.meta.env.PUBLIC_FORMSPREE_URL} method="POST" class="xp-form">
        <fieldset class="xp-fieldset">
          <legend class="xp-legend">Informações de Contato</legend>

          <div class="form-group">
            <label for="name" class="xp-label">Nome:</label>
            <input
              type="text"
              name="name"
              id="name"
              placeholder="Como posso te chamar?"
              class="xp-input"
              required
            />
          </div>

          <div class="form-group">
            <label for="email" class="xp-label">Email:</label>
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Seu melhor email"
              class="xp-input"
              required
            />
          </div>

          <div class="form-group">
            <label for="message" class="xp-label">Mensagem:</label>
            <textarea
              name="message"
              id="message"
              rows="6"
              placeholder="O que gostaria de me dizer?"
              class="xp-input"
              required
            ></textarea>
          </div>

          <div class="button-container">
            <button type="submit" class="xp-button">
              Enviar mensagem
            </button>
            <button type="reset" class="xp-button secondary">
              Limpar campos
            </button>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</Layout>

<style>
  /* Janela Principal */
  .window {
    background: #ECE9D8;
    border: 1px solid #0054E3;
    border-radius: 8px 8px 0 0;
    box-shadow: 2px 2px 10px rgba(0,0,0,0.3);
    margin: 20px auto;
    width: 95%;
    max-width: 600px;
  }

  .window-header {
    background: linear-gradient(to right, #0054E3, #2787E9, #0054E3);
    padding: 5px 10px;
    border-radius: 7px 7px 0 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: white;
    font-weight: bold;
  }

  .window-controls {
    display: flex;
    gap: 4px;
  }

  .window-controls span {
    width: 22px;
    height: 22px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to bottom, #FFF, #DFDFDF);
    border: 1px solid #0054E3;
    border-radius: 3px;
    color: #000;
    cursor: pointer;
  }

  .window-content {
    padding: 20px;
    background: #fff;
  }

  /* Formulário */
  .xp-fieldset {
    border: 2px solid;
    border-color: #808080 #FFFFFF #FFFFFF #808080;
    padding: 20px;
    background: #ECE9D8;
    margin: 0;
  }

  .xp-legend {
    font-family: 'Tahoma', sans-serif;
    color: #003399;
    font-size: 1.1rem;
    font-weight: bold;
    padding: 0 10px;
    background: #ECE9D8;
  }

  .xp-form {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 4px;
    margin-bottom: 12px;
  }

  .xp-label {
    font-family: 'Tahoma', sans-serif;
    color: #000000;
    font-size: 0.9rem;
    font-weight: bold;
  }

  .xp-input {
    background: #FFFFFF;
    border: 2px solid;
    border-color: #808080 #FFFFFF #FFFFFF #808080;
    box-shadow: inset 1px 1px #404040, inset -1px -1px #FFFFFF;
    padding: 6px 8px;
    font-family: 'Tahoma', sans-serif;
    color: #000000;
    width: 100%;
  }

  .xp-input:focus {
    outline: 1px dotted #000000;
    outline-offset: -4px;
  }

  /* Botões */
  .button-container {
    display: flex;
    gap: 10px;
    justify-content: center;
    margin-top: 20px;
  }

  .xp-button {
    background: linear-gradient(to bottom, #F6F6F6, #DCDBDB);
    border: 2px solid;
    border-color: #FFFFFF #808080 #808080 #FFFFFF;
    box-shadow: inset 1px 1px #FFFFFF, inset -1px -1px #404040;
    color: #000000;
    font-family: 'Tahoma', sans-serif;
    font-size: 0.9rem;
    padding: 6px 16px;
    cursor: pointer;
    min-width: 120px;
  }

  .xp-button.secondary {
    background: linear-gradient(to bottom, #ECE9D8, #E3E1D5);
  }

  .xp-button:hover {
    background: linear-gradient(to bottom, #FFF, #E9E9E9);
  }

  .xp-button:active {
    border-color: #808080 #FFFFFF #FFFFFF #808080;
    box-shadow: inset 1px 1px #404040, inset -1px -1px #FFFFFF;
    padding-top: 7px;
    padding-left: 17px;
  }

  /* Responsividade */
  @media (max-width: 640px) {
    .window {
      margin: 10px auto;
      width: 95%;
    }

    .window-content {
      padding: 15px;
    }

    .button-container {
      flex-direction: column;
    }

    .xp-button {
      width: 100%;
    }
  }
</style>
