---
import Layout from '../layouts/Layout.astro';
import PageTitle from '../components/PageTitle.astro';
---

<Layout title="Contact">
  <div class="max-w-3xl mx-auto">
    <PageTitle title="Entre em contato ♡" />
    
    <div class="bg-white/80 backdrop-blur-sm p-8 rounded-2xl border-4 border-kawaii-lavender">
      <form action={import.meta.env.PUBLIC_FORMSPREE_URL} method="POST" class="space-y-6">

  <div>
    <label for="name" class="block font-pixel text-lg text-pink-600 mb-2">Seu nome ♡</label>
    <input
      type="text"
      name="name"
      id="name"
      class="w-full px-4 py-2 rounded-lg border-2 border-kawaii-pink focus:border-pink-500 focus:ring-2 focus:ring-pink-200 font-pixel"
      required
    />
  </div>
  
  <div>
    <label for="email" class="block font-pixel text-lg text-pink-600 mb-2">Email ♡</label>
    <input
      type="email"
      name="email"
      id="email"
      class="w-full px-4 py-2 rounded-lg border-2 border-kawaii-pink focus:border-pink-500 focus:ring-2 focus:ring-pink-200 font-pixel"
      required
    />
  </div>
  
  <div>
    <label for="message" class="block font-pixel text-lg text-pink-600 mb-2">Sua mensagem ♡</label>
    <textarea
      name="message"
      id="message"
      rows="6"
      class="w-full px-4 py-2 rounded-lg border-2 border-kawaii-pink focus:border-pink-500 focus:ring-2 focus:ring-pink-200 font-pixel"
      required
    ></textarea>
  </div>
  
  <button
    type="submit"
    class="w-full bg-kawaii-pink hover:bg-pink-400 text-pink-700 font-pixel text-lg py-3 px-6 rounded-lg border-2 border-pink-400 transition-all hover:scale-105"
  >
    ✧ Enviar ✧
  </button>
</form>
</form>
    </div>
  </div>
</Layout>
