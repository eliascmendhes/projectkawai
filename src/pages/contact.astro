---
import Layout from '../layouts/Layout.astro';
import PageTitle from '../components/PageTitle.astro';
---

<Layout title="Contato - Meu blog cute">
  <div class="max-w-3xl mx-auto">
    <PageTitle title="Entre em contato ♡" />
    
    <div class="bg-white/90 backdrop-blur-sm p-8 rounded-2xl border-4 border-[#FFB6C1] shadow-lg">
      <div class="text-center mb-8">
        <h2 class="font-[Mochiy+Pop+One] text-xl text-[#FF1493] mb-4">
          🌸 Sim, vou receber essa mensagem! ✧
        </h2>
      </div>

      <form action={import.meta.env.PUBLIC_FORMSPREE_URL} method="POST" class="space-y-6">
        <div>
          <label for="name" class="block font-[Mochiy+Pop+One] text-lg text-[#FF1493] mb-2">
            🍡 Seu nome ♡
          </label>
          <input
            type="text"
            name="name"
            id="name"
            placeholder="Como posso te chamar?"
            class="w-full px-4 py-3 rounded-xl border-2 border-[#FFB6C1] focus:border-[#FF69B4] focus:ring-2 focus:ring-[#FFD1DC] 
            font-[Mochiy+Pop+One] text-[#333] transition-all hover:shadow-md"
            required
          />
        </div>
        
        <div>
          <label for="email" class="block font-[Mochiy+Pop+One] text-lg text-[#FF1493] mb-2">
            📧 Email ♡
          </label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Seu melhor email"
            class="w-full px-4 py-3 rounded-xl border-2 border-[#FFB6C1] focus:border-[#FF69B4] focus:ring-2 focus:ring-[#FFD1DC] 
            font-[Mochiy+Pop+One] text-[#333] transition-all hover:shadow-md"
            required
          />
        </div>
        
        <div>
          <label for="message" class="block font-[Mochiy+Pop+One] text-lg text-[#FF1493] mb-2">
            💌 Sua mensagem ♡
          </label>
          <textarea
            name="message"
            id="message"
            rows="6"
            placeholder="O que gostaria de me dizer?"
            class="w-full px-4 py-3 rounded-xl border-2 border-[#FFB6C1] focus:border-[#FF69B4] focus:ring-2 focus:ring-[#FFD1DC] 
            font-[Mochiy+Pop+One] text-[#333] transition-all hover:shadow-md"
            required
          ></textarea>
        </div>
        
        <button
          type="submit"
          class="w-full bg-[#FFB6C1] hover:bg-[#FF69B4] text-white font-[Mochiy+Pop+One] text-lg py-3 px-6 
          rounded-xl border-2 border-[#FF69B4] transition-all hover:scale-105 hover:shadow-lg"
        >
          ✧ Enviar mensagem ✧
        </button>
      </form>

      
    </div>
  </div>
</Layout>
