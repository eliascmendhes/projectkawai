---
import Layout from '../layouts/Layout.astro';
import PageTitle from '../components/PageTitle.astro';
import ImageCard from '../components/ImageCard.astro';
import { images } from '../data/images';

const imagesPerPage = 6;
const totalPages = Math.ceil(images.length / imagesPerPage);
const currentPage = Astro.url.searchParams.get('page') ? parseInt(Astro.url.searchParams.get('page')) : 1;
const startIndex = (currentPage - 1) * imagesPerPage;
const endIndex = startIndex + imagesPerPage;
const currentImages = images.slice(startIndex, endIndex);
---

<Layout title="Galeria">
  <div class="max-w-5xl mx-auto p-4">
    <PageTitle title="Galeria">
      <span class="kawaii-content">Minha galeria ✧</span>
      <span class="retro-content">◆ Minha galeria ◆</span>
    </PageTitle>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 nostalgic-gallery">
      {currentImages.map(img => (
        <ImageCard {...img} />
      ))}
    </div>

    <div class="mt-12 flex flex-wrap justify-center gap-4 font-pixel nostalgic-pagination">
      {currentPage > 1 && (
        <a
          href={`?page=${currentPage - 1}`}
          class="nostalgic-nav-button pagination-link"
        >
          <span class="kawaii-content">← Anterior</span>
          <span class="retro-content">[←] Anterior</span>
        </a>
      )}

      <div class="flex gap-2 flex-wrap justify-center">
        {Array.from({ length: totalPages }, (_, i) => i + 1).map(pageNumber => (
          <a
            href={`?page=${pageNumber}`}
            class={`nostalgic-page-button pagination-number ${pageNumber === currentPage ? 'active' : ''}`}
          >
            {pageNumber}
          </a>
        ))}
      </div>

      {currentPage < totalPages && (
        <a
          href={`?page=${currentPage + 1}`}
          class="nostalgic-nav-button pagination-link"
        >
          <span class="kawaii-content">Próximo →</span>
          <span class="retro-content">Próximo [→]</span>
        </a>
      )}
    </div>
  </div>
</Layout>

<style>
  /* Estilos para o modo retrô */
  :global(.nostalgic-mode) .nostalgic-gallery {
    gap: 16px;
    padding: 8px;
    background: #c0c0c0;
    border: 2px solid;
    border-color: #ffffff #404040 #404040 #ffffff;
    box-shadow: inset -1px -1px #808080, inset 1px 1px #dfdfdf;
  }

  /* Botões de navegação (Anterior/Próximo) */
  :global(.nostalgic-mode) .nostalgic-nav-button {
    background: #c0c0c0;
    border: 2px solid;
    border-color: #ffffff #404040 #404040 #ffffff;
    box-shadow: inset -1px -1px #808080, inset 1px 1px #dfdfdf;
    color: #000000;
    font-family: 'MS Gothic', monospace;
    padding: 4px 12px;
    text-decoration: none;
    position: relative;
    min-width: 100px;
    text-align: center;
  }

  :global(.nostalgic-mode) .nostalgic-nav-button:hover {
    background: #d4d0c8;
  }

  :global(.nostalgic-mode) .nostalgic-nav-button:active {
    border-color: #404040 #ffffff #ffffff #404040;
    box-shadow: inset 1px 1px #808080, inset -1px -1px #dfdfdf;
    padding-top: 5px;
    padding-left: 13px;
  }

  /* Botões de página */
  :global(.nostalgic-mode) .nostalgic-page-button {
    background: #c0c0c0;
    border: 2px solid;
    border-color: #ffffff #404040 #404040 #ffffff;
    box-shadow: inset -1px -1px #808080, inset 1px 1px #dfdfdf;
    color: #000000;
    font-family: 'MS Gothic', monospace;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    position: relative;
  }

  :global(.nostalgic-mode) .nostalgic-page-button:hover {
    background: #d4d0c8;
  }

  :global(.nostalgic-mode) .nostalgic-page-button.active {
    background: #000080;
    color: #ffffff;
    border-color: #404040 #ffffff #ffffff #404040;
    box-shadow: inset 1px 1px #000040, inset -1px -1px #0000c0;
  }

  /* Remove animações */
  :global(.nostalgic-mode) .animate-bounce,
  :global(.nostalgic-mode) .animate-pulse,
  :global(.nostalgic-mode) .transition-all,
  :global(.nostalgic-mode) .duration-300 {
    animation: none !important;
    transition: none !important;
  }

  :global(.nostalgic-mode) .hover\:scale-105:hover {
    transform: none !important;
  }

  body:not(.nostalgic-mode) .nostalgic-gallery {
    gap: 2rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(10px);
    border-radius: 1rem;
    box-shadow: 0 8px 32px rgba(31, 38, 135, 0.1);
  }

  body:not(.nostalgic-mode) .pagination-link {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(5px);
    padding: 0.75rem 1.5rem;
    border-radius: 2rem;
    color: #805ad5;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  body:not(.nostalgic-mode) .pagination-link:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.2);
  }

  body:not(.nostalgic-mode) .pagination-number {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(5px);
    border-radius: 50%;
    color: #805ad5;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  body:not(.nostalgic-mode) .pagination-number:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.2);
  }

  body:not(.nostalgic-mode) .pagination-number.active {
    background: linear-gradient(135deg, #9f7aea, #667eea);
    color: white;
    border: none;
    box-shadow: 0 4px 15px rgba(139, 92, 246, 0.3);
  }

  /* Scrollbar    PRECISO DE MAIS TEMPO*/
  body:not(.nostalgic-mode) .nostalgic-gallery::-webkit-scrollbar {
    width: 8px;
  }

  body:not(.nostalgic-mode) .nostalgic-gallery::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
  }

  body:not(.nostalgic-mode) .nostalgic-gallery::-webkit-scrollbar-thumb {
    background: linear-gradient(135deg, #9f7aea, #667eea);
    border-radius: 4px;
  }

  /* Animações suaves */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  body:not(.nostalgic-mode) .nostalgic-gallery > * {
    animation: fadeIn 0.5s ease-out forwards;
  }

  /* Classes para mostrar/esconder conteúdo */
  .kawaii-content {
    display: block;
  }

  .retro-content {
    display: none;
  }

  :global(.nostalgic-mode) .kawaii-content {
    display: none !important;
  }

  :global(.nostalgic-mode) .retro-content {
    display: block !important;
  }
</style>
