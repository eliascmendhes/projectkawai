---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Meu Espaço">
    <div class="max-w-5xl mx-auto p-4">
        <div class="retro-header text-center mb-12 p-8">
            <h1 class="text-4xl md:text-6xl mb-4">
                Olá!
            </h1>
            <p class="text-xl">
                Bem-vindo(a) ao meu espaço digital
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <a href="/about" class="retro-card">
                <div class="p-6">
                    <h2 class="text-2xl mb-3">┍ Sobre mim ┑</h2>
                    <p>Minha introdução</p>
                </div>
            </a>

            <a href="/blog" class="retro-card">
                <div class="p-6">
                    <h2 class="text-2xl mb-3">◈ Postagens ◈</h2>
                    <p>Meus pensamentos</p>
                </div>
            </a>

            <a href="/gallery" class="retro-card">
                <div class="p-6">
                    <h2 class="text-2xl mb-3">❖ Galeria ❖</h2>
                    <p>Fotos e memórias</p>
                </div>
            </a>

            <a href="/recommendations" class="retro-card">
                <div class="p-6">
                    <h2 class="text-2xl mb-3">☆ Favoritos ☆</h2>
                    <p>Recomendações</p>
                </div>
            </a>
        </div>

        <div class="mt-12 text-center">
            <div class="retro-contact inline-block p-6">
                <h2 class="text-2xl mb-4">▌ Vamos conversar? ▐</h2>
                <div class="flex flex-col sm:flex-row justify-center gap-4 sm:space-x-8">
                    <a href="/contact" class="retro-button">
                        <span class="arrow-icon hidden sm:inline">►</span>
                        Contato
                        <span class="arrow-icon hidden sm:inline">◄</span>
                    </a>
                    <a href="/links" class="retro-button">
                        <span class="arrow-icon hidden sm:inline">►</span>
                        Links
                        <span class="arrow-icon hidden sm:inline">◄</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    /* Estilos base */
    .retro-header, .retro-card, .retro-contact {
        background: var(--primary);
        border: 2px solid;
        border-color: var(--highlight) var(--border) var(--border) var(--highlight);
        box-shadow:
            inset 1px 1px rgba(255,255,255,0.1),
            inset -1px -1px rgba(0,0,0,0.3),
            0 2px 4px rgba(0,0,0,0.3);
    }

    /* Cards */
    .retro-card {
        display: block;
        transition: transform 0.2s, background-color 0.2s;
    }

    .retro-card:hover {
        transform: translateY(-2px);
        background: var(--accent);
        border-color: var(--highlight) var(--border) var(--border) var(--highlight);
    }

    .retro-card h2 {
        color: var(--title-color);
        border-bottom: 2px solid;
        border-color: var(--highlight) var(--border) var(--border) var(--highlight);
        padding-bottom: 0.5rem;
    }

    /* Botões */
    .retro-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 8px 16px;
        width: 100%;
        max-width: 200px;
        background: var(--button-gradient);
        border: 2px solid;
        border-color: var(--highlight) var(--border) var(--border) var(--highlight);
        box-shadow:
            inset 1px 1px rgba(255,255,255,0.1),
            inset -1px -1px rgba(0,0,0,0.3);
        transition: all 0.2s;
    }

    @media (max-width: 640px) {
        .retro-button {
            padding: 12px 24px;
            font-size: 1.1rem;
        }
    }

    .retro-button:hover {
        background: var(--button-hover);
    }

    .retro-button:active {
        transform: translateY(1px);
        border-color: var(--border) var(--highlight) var(--highlight) var(--border);
        box-shadow:
            inset 1px 1px rgba(0,0,0,0.3),
            inset -1px -1px rgba(255,255,255,0.1);
        padding-top: 9px;
        padding-left: 17px;
    }

    /* Header especial */
    .retro-header h1 {
        text-shadow: 2px 2px 0 rgba(0,0,0,0.5);
        letter-spacing: 2px;
        color: var(--title-color);
    }

    /* Animação sutil ao carregar */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .retro-card {
        animation: fadeIn 0.3s ease-out forwards;
    }

    .retro-card:nth-child(2) { animation-delay: 0.1s; }
    .retro-card:nth-child(3) { animation-delay: 0.2s; }
    .retro-card:nth-child(4) { animation-delay: 0.3s; }
</style>
