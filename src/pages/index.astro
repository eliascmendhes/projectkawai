        border-radius: 0;
    }

    :global(.nostalgic-mode) .nostalgic-divider {
        display: block;
        height: 10px;
        background: url("data:image/gif;base64,R0lGODlhCgAKAIAAAAAAAP///yH5BAEAAAEALAAAAAAKAAoAAAIRjI+py+0Po5y02ouz3rz7VgAAOw==") repeat-x;
        margin: 1rem 0;
    }

    :global(.nostalgic-mode) .nostalgic-grid {
        display: block;
    }

    :global(.nostalgic-mode) .nostalgic-card {
        margin-bottom: 1rem;
    }

    :global(.nostalgic-mode) .nostalgic-card > div {
        background: #c0c0c0;
        border: 2px solid;
        border-color: #ffffff #404040 #404040 #ffffff;
        box-shadow: inset -1px -1px #808080, inset 1px 1px #dfdfdf;
        border-radius: 0;
        transform: none !important;
        transition: none;
    }

    :global(.nostalgic-mode) .nostalgic-card > div:hover {
        background: #d4d0c8;
    }

    :global(.nostalgic-mode) .nostalgic-icon {
        filter: grayscale(100%);
    }

    :global(.nostalgic-mode) .font-cherry,
    :global(.nostalgic-mode) .font-pixel {
        font-family: 'MS Gothic', monospace;
    }

    :global(.nostalgic-mode) .animate-float {
        animation: none;
    }

    :global(.nostalgic-mode) .nostalgic-contact {
        background: #c0c0c0;
        border: 2px solid;
        border-color: #ffffff #404040 #404040 #ffffff;
        box-shadow: inset -1px -1px #808080, inset 1px 1px #dfdfdf;
