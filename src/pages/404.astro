---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Página não encontrada - 404">
  <div class="window max-w-3xl mx-auto">
    <div class="window-header">
      <div class="window-title">Erro 404</div>
      <div class="window-controls">
        <span class="minimize">_</span>
        <span class="maximize">□</span>
        <span class="close">×</span>
      </div>
    </div>

    <div class="window-content">
      <div class="error-container">
        <h1 class="error-title">[ 404 ]</h1>
        <p class="error-message">◆ Página não encontrada ◆</p>
        <p class="error-description">
          A página que você está procurando não existe ou foi movida.
        </p>

        <div class="button-container">
          <a href="/" class="xp-button">
            [ Voltar para a página inicial ]
          </a>
          <a href="/blog" class="xp-button secondary">
            [ Ir para o blog ]
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .window {
    background: #ECE9D8;
    border: 1px solid #0054E3;
    border-radius: 8px 8px 0 0;
    box-shadow: 2px 2px 10px rgba(0,0,0,0.3);
    margin: 20px auto;
  }

  .window-header {
    background: linear-gradient(to right, #0054E3, #2787E9, #0054E3);
    padding: 5px 10px;
    border-radius: 7px 7px 0 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: white;
    font-weight: bold;
  }

  .window-controls {
    display: flex;
    gap: 4px;
  }

  .window-controls span {
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to bottom, #FFF, #DFDFDF);
    border: 1px solid #0054E3;
    border-radius: 2px;
    color: #000;
    font-size: 0.7rem;
    cursor: pointer;
  }

  .window-content {
    padding: 24px;
  }

  .error-container {
    background: #FFFFFF;
    border: 2px solid;
    border-color: #FFFFFF #808080 #808080 #FFFFFF;
    box-shadow: inset 1px 1px #FFFFFF, inset -1px -1px #404040;
    padding: 24px;
    text-align: center;
  }

  .error-title {
    font-family: 'Tahoma', sans-serif;
    color: #003399;
    font-size: 3rem;
    margin-bottom: 16px;
  }

  .error-message {
    font-family: 'Tahoma', sans-serif;
    color: #000080;
    font-size: 1.5rem;
    margin-bottom: 8px;
  }

  .error-description {
    font-family: 'Tahoma', sans-serif;
    color: #000000;
    font-size: 1rem;
    margin-bottom: 24px;
  }

  .button-container {
    display: flex;
    gap: 16px;
    justify-content: center;
  }

  .xp-button {
    background: linear-gradient(to bottom, #F6F6F6, #DCDBDB);
    border: 2px solid;
    border-color: #FFFFFF #808080 #808080 #FFFFFF;
    box-shadow: inset 1px 1px #FFFFFF, inset -1px -1px #404040;
    color: #000000;
    font-family: 'Tahoma', sans-serif;
    padding: 6px 16px;
    text-decoration: none;
    min-width: 180px;
  }

  .xp-button.secondary {
    background: linear-gradient(to bottom, #ECE9D8, #E3E1D5);
  }

  .xp-button:hover {
    background: linear-gradient(to bottom, #FFF, #E9E9E9);
  }

  .xp-button:active {
    border-color: #808080 #FFFFFF #FFFFFF #808080;
    box-shadow: inset 1px 1px #404040, inset -1px -1px #FFFFFF;
    padding-top: 7px;
    padding-left: 17px;
  }

  @media (max-width: 640px) {
    .button-container {
      flex-direction: column;
      align-items: center;
    }

    .xp-button {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
