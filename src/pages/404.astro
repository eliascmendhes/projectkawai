<style>
  /* Estilos Kawaii */
  .kawaii-content {
    display: block;
  }

  .retro-content {
    display: none;
  }

  /* Bot√£o Kawaii */
  .nostalgic-button {
    @apply px-8 py-2.5 rounded-full bg-gradient-to-r from-[#FFB6C1] to-[#FF69B4]
    text-white font-[Mochiy+Pop+One] text-base mx-auto block
    transition-all duration-300 hover:shadow-lg transform hover:scale-[1.02]
    border-2 border-[#FFB6C1] hover:border-[#FF69B4];
    width: fit-content;
    min-width: 200px;
    position: relative;
    overflow: hidden;
  }

  .nostalgic-button::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
    transform: translateX(-100%);
    transition: transform 0.6s;
  }

  .nostalgic-button:hover::before {
    transform: translateX(100%);
  }

  .nostalgic-button {
    box-shadow: 0 2px 8px rgba(255, 182, 193, 0.3);
  }

  .nostalgic-button:hover {
    box-shadow: 0 4px 12px rgba(255, 105, 180, 0.4);
  }

  /* Estilos para o modo retr√¥ */
  :global(.nostalgic-mode) .nostalgic-container {
    background: #c0c0c0;
    border: 2px solid;
    border-color: #ffffff #404040 #404040 #ffffff;
    box-shadow: inset -1px -1px #808080, inset 1px 1px #dfdfdf;
    border-radius: 0;
    padding: 16px;
  }

  :global(.nostalgic-mode) .nostalgic-title {
    font-family: 'MS Gothic', monospace;
    color: #000080;
    text-transform: uppercase;
    border-bottom: 2px solid;
    border-color: #808080 #ffffff #ffffff #808080;
    padding-bottom: 8px;
  }

  :global(.nostalgic-mode) .nostalgic-text {
    font-family: 'MS Gothic', monospace;
    color: #000000;
    font-size: 1rem;
  }

  :global(.nostalgic-mode) .nostalgic-button {
    background: #c0c0c0;
    background-image: none;
    border: 2px solid;
    border-color: #ffffff #404040 #404040 #ffffff;
    box-shadow: inset -1px -1px #808080, inset 1px 1px #dfdfdf;
    color: #000000;
    font-family: 'MS Gothic', monospace;
    padding: 4px 32px;
    width: auto;
    min-width: 200px;
    position: relative;
    transform: none;
    transition: none;
    border-radius: 0;
  }

  :global(.nostalgic-mode) .nostalgic-button:hover {
    background: #d4d0c8;
  }

  :global(.nostalgic-mode) .nostalgic-button:active {
    border-color: #404040 #ffffff #ffffff #404040;
    box-shadow: inset 1px 1px #808080, inset -1px -1px #dfdfdf;
    padding-top: 5px;
    padding-left: 33px;
  }

  :global(.nostalgic-mode) .nostalgic-link {
    font-family: 'MS Gothic', monospace;
    color: #0000EE;
    text-decoration: underline;
  }

  :global(.nostalgic-mode) .nostalgic-link:hover {
    color: #551A8B;
  }

  /* Controle de visibilidade */
  :global(.nostalgic-mode) .kawaii-content {
    display: none !important;
  }

  :global(.nostalgic-mode) .retro-content {
    display: block !important;
  }

  /* Remove anima√ß√µes no modo retr√¥ */
  :global(.nostalgic-mode) * {
    transition: none !important;
    transform: none !important;
  }
</style>
